extends base.pug

block scripts
    script(src='/index.js')
  
block style
    style
      include ../static/style.css
      include ../static/contactstyle.css

block content
    div.container
        h1 Contact Us
        form(action= "/contact", method= "post", id = "myForm")
            <input type="text" class= “name” name="name" placeholder="Enter your name ..." required>
            <input type="number" class= “name” name="number" placeholder="Enter your Phone Number ..." required>
            <input type="email" class= “name” name="email" placeholder="Enter your email id ..." required>
            <input type="text" class= “name” name="address" placeholder="Enter your address ...">

            input(type="submit", value="Submit")